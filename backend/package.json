{
  "name": "nexa-backend",
  "version": "1.0.0",
  "description": "Autonomous Research & Build Agent Platform Backend",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --no-notify --inspect=0.0.0:9229 --rs src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest --detectOpenHandles --forceExit",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "docker:dev": "docker-compose -f docker-compose.yml up -d --build",
    "docker:prod": "docker-compose -f docker-compose.production.yml up -d --build",
    "docker:down": "docker-compose down -v",
    "migrate": "ts-node ./node_modules/typeorm/cli.js migration:run",
    "migrate:revert": "ts-node ./node_modules/typeorm/cli.js migration:revert",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js"
  },
  "dependencies": {
    "@google/generative-ai": "latest",
    "axios": "latest",
    "bcryptjs": "latest",
    "bull": "latest",
    "compression": "latest",
    "cors": "latest",
    "crypto-js": "latest",
    "dotenv": "latest",
    "express": "latest",
    "express-rate-limit": "latest",
    "helmet": "latest",
    "ioredis": "latest",
    "joi": "latest",
    "jsonwebtoken": "latest",
    "mongoose": "latest",
    "morgan": "latest",
    "multer": "latest",
    "node-cache": "latest",
    "nodemailer": "latest",
    "redis": "latest",
    "reflect-metadata": "latest",
    "socket.io": "latest",
    "ts-node": "latest",
    "tslib": "latest",
    "typeorm": "latest",
    "uuid": "latest",
    "winston": "latest",
    "winston-daily-rotate-file": "latest",
    "ws": "latest"
  },
  "devDependencies": {
    "@types/bcryptjs": "latest",
    "@types/bull": "latest",
    "@types/compression": "latest",
    "@types/cors": "latest",
    "@types/express": "latest",
    "@types/express-rate-limit": "latest",
    "@types/helmet": "latest",
    "@types/ioredis": "latest",
    "@types/jest": "latest",
    "@types/jsonwebtoken": "latest",
    "@types/morgan": "latest",
    "@types/multer": "latest",
    "@types/node": "latest",
    "@types/node-cache": "latest",
    "@types/nodemailer": "latest",
    "@types/supertest": "latest",
    "@types/uuid": "^11.0.0",
    "@types/ws": "latest",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "eslint": "latest",
    "eslint-config-prettier": "latest",
    "eslint-plugin-prettier": "latest",
    "jest": "latest",
    "prettier": "latest",
    "supertest": "latest",
    "ts-jest": "latest",
    "ts-node-dev": "latest",
    "typescript": "latest"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov"
    ]
  }
}
