{
  "name": "nexa-backend",
  "version": "1.0.0",
  "description": "Autonomous Research & Build Agent Platform Backend",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --no-notify --inspect=0.0.0:9229 --rs src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest --detectOpenHandles --forceExit",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "docker:dev": "docker-compose -f docker-compose.yml up -d --build",
    "docker:prod": "docker-compose -f docker-compose.production.yml up -d --build"
  },
  "dependencies": {
    "@google/generative-ai": "^0.1.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/helmet": "^4.0.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.19",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "axios": "^1.6.5",
    "bcryptjs": "^2.4.3",
    "bull": "^4.12.4",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "nodemailer": "^6.9.7",
    "redis": "^4.6.13",
    "reflect-metadata": "^0.2.1",
    "socket.io": "^4.7.4",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.2",
    "typeorm": "^0.3.19",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/bull": "^4.10.6",
    "@types/express-rate-limit": "^5.1.3",
    "@types/ioredis": "^5.0.0",
    "@types/jest": "^29.5.11",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node-cache": "^4.2.8",
    "@types/nodemailer": "^6.4.14",
    "@types/supertest": "^2.0.15",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov"
    ]
    "@types/jsonwebtoken": "^9.0.0",
    "@types/uuid": "^9.0.0"
  }
}